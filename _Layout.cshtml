@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager
@inject RoleManager<IdentityRole> RoleManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Gift Of The Givers</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <environment include="Development">
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    </environment>
    <style>
        body {
            padding-top: 70px;
            font-family: Arial, sans-serif;
        }

        /* Navbar */
        .navbar-brand {
            font-weight: bold;
        }

        /* Hero Section */
        .hero {
            position: relative;
            padding: 100px 20px;
            color: white;
            text-align: center;
            background: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('/images/hero-background.jpg') no-repeat center center;
            background-size: cover;
        }

            .hero h1 {
                font-size: 3rem;
                font-weight: 700;
                margin-bottom: 20px;
            }

            .hero p {
                font-size: 1.3rem;
                margin-bottom: 30px;
            }

        .btn-hero {
            margin: 5px;
            font-size: 1.1rem;
            padding: 10px 20px;
        }

        /* Content sections */
        .section {
            padding: 60px 20px;
        }

            .section h3 {
                margin-bottom: 20px;
            }

            .section p {
                font-size: 1.1rem;
            }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top shadow-sm">
        <div class="container">
            <a class="navbar-brand" href="/">Gift Of The Givers</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Donations" asp-action="Create">Donate</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Incidents" asp-action="Create">Report</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Volunteer" asp-action="Register">Volunteer</a></li>

                        @* Admin-only link *@
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Volunteer" asp-action="Approve">Approve Volunteers</a></li>
                        }

                        <li class="nav-item">
                            <form asp-controller="Account" asp-action="Logout" method="post">
                                <button class="btn btn-outline-danger nav-link">Logout</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Register">Sign Up</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Login">Sign In</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Donations" asp-action="Create">Donate</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Incidents" asp-action="Create">Report</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Volunteer" asp-action="Register">Volunteer</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    @* Hero section on home page *@
    @if (ViewData["Title"]?.ToString() == "Welcome")
    {
        <div class="hero">
            <h1>Making a Difference Together</h1>
            <p>
                Gift Of The Givers is the largest disaster response non-governmental organisation in Africa.
                We provide humanitarian aid, disaster relief, and social development support to those in need.
            </p>
            <a asp-controller="Donations" asp-action="Create" class="btn btn-success btn-hero">Donate Now</a>
            <a asp-controller="Incidents" asp-action="Create" class="btn btn-primary btn-hero">Report an Incident</a>
        </div>
    }

    <div class="container">
        @RenderBody()
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>

